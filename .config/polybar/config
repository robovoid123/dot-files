[colors]
;background = ${xrdb:color0:#222}
background = #1e2127
background-alt = #5c6370
;foreground = ${xrdb:color7:#222}
foreground = #ffffff
foreground-alt = #abb2bf
primary = #61afef
secondary = #d19a66
alert = #e06c75
empty = #abb2bf
cpu = #98c379
memory =#56b6c2
calander = #c678dd
battery = #abb2bf

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 20
offset-x = 0%
offset-y = 0%

fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 4
border-color = ${colors.background}

spacing = 1
padding = 1
module-margin = 2

tray-maxsize = 16

font-0 = JetBrains Mono Nerd Font:size=9;3
font-1 = JetBrains Mono Nerd Font:size=11;2
font-2 = JetBrains Mono Nerd Font:size=10;1
font-3 = FontAwesome:size=12;2.5
font-4 = JetBrains Mono Nerd Font:size=15;1

modules-left = bspwm xwindow
modules-right = backlight-acpi  pulseaudio updates-arch-combined temperature memory cpu battery date

tray-position = right
tray-padding = 2
;tray-background = #0063ff

wm-restack = bspwm

override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev


cursor-click = pointer
cursor-scroll = ns-resize

[module/updates-arch-combined]
type = custom/script
exec = ~/scripts/polybar-scripts/updates-arch-combined.sh
format-prefix = "  "
format-prefix-foreground = ${colors.cpu}
interval = 600

[module/xwindow]
type = internal/xwindow
format-foreground = ${colors.battery}
label-font = 1
label = %title%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm


ws-icon-default ="  "

format = <label-state> <label-mode>


label-focused = %name%
label-focused-background = ${colors.memory}
; label-focused-color= ${colors.danger}
label-focused-foreground = ${colors.background}
label-focused-font = 1
label-focused-underline= ${colors.primary}
label-focused-padding = 1

label-occupied =
label-occupied-font = 1
label-occupied-padding = 1

label-urgent =
label-urgent-font = 1
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty =
label-empty-font = 1
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

; Separator in between workspaces
 label-separator = " "

[module/xbacklight]
type = internal/xbacklight

format = <bar>

bar-width = 6
bar-indicator = 
bar-indicator-font = 1
bar-fill = ─
bar-fill-font = 1
bar-fill-foreground = #83a598
bar-empty = ─
bar-empty-font = 1
bar-empty-foreground = ${colors.empty}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.cpu}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 20
format-prefix = "  "
format-prefix-foreground = ${colors.memory}
label = %percentage_used%%

[module/date]
type = internal/date
interval = 60

date = "%Y %b %d (%a)"
time = "%I:%M%p"

format-prefix ="  "
format-prefix-foreground = ${colors.calander}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}

label-muted =  muted
label-muted-foreground = ${colors.alert}

bar-volume-width = 6
bar-volume-foreground-0 = #8ec07c
bar-volume-foreground-1 = #8ec07c
bar-volume-foreground-2 = #8ec07c
bar-volume-foreground-3 = #8ec07c
bar-volume-foreground-4 = #8ec07c
